<h4>Prénom:</h4>
<p> <%= @user.first_name %></p>
<h4>Nom:</h4>
<p><%= @user.last_name %></p>
<h4>Description:</h4>
<p> <%= @user.description %></p>
<h4>Email:</h4>
<p><%= @user.email %></p>


<h4>Les évenement que tu as créer:</h4>



<div class="row">

<% @event_owned.each do |i| %>
<div class="card col-sm-3 text-center">
  <div class="card-header">
    <p>Event n°<%= i.id %></p>
  </div>
  <div class="card-body">
    <h5 class="card-title">titre : <%= i.title %></h5>
    <p class="card-text">date : <%= i.start_date %></p>
    <a href= "events/<%= i.id%>" class="btn btn-primary">En savoir plus</a>
  </div>
</div>
<% end %>

</div>





